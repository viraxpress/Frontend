                            .then((response) => {
                                if (response.ok) {
                                   return response.json();
                                }
                            }).then((data) => { 
                                if (data && Object.keys(data).length > 0) {
                                    this.isRegionAvailable = true;
                                } else {
                                    this.isRegionAvailable = false;
                                }
