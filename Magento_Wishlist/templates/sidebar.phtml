    <script>
        function LayerWishlistItems() {
            return {
                itemCount: 0,
                totalItem: 0,
                wishlist: [],
                init() {
                    const intervalId = setInterval(() => {
                        clearInterval(intervalId);
                        this.fetchWishlistData();
                    }, 2000);
                },
                async fetchWishlistData() {
                    const cacheData = JSON.parse(localStorage.getItem('vira-mage-cache-storage') || '{}');
                    const wishlistData = await getCustomerDataSections('wishlist');
                    if (wishlistData.wishlist) {
                        const wishlistCustomerData = wishlistData.wishlist;
                        if (wishlistCustomerData && wishlistCustomerData.counter != null) {
                            this.wishlist = wishlistCustomerData;
                            this.itemCount = wishlistCustomerData.items.length;
                            this.totalItem = wishlistCustomerData.counter ? wishlistCustomerData.counter.replace(/[^0-9]/g, '') : '';
                        } else {
                            this.wishlist = [];
                            this.itemCount = 0;
                            this.totalItem = 0;
                        }
                    } else {
                        this.wishlist = [];
                        this.itemCount = 0;
                        this.totalItem = 0;
                    }
                },
                itemRemove(jsonString) {
                    var params = JSON.parse(jsonString);
                    var requestParams = [];
                    if (params.data.item) {
                        var formKey = getFormKeyCookie();

                        const formData = new FormData();
                        formData.append('form_key', formKey);
                        formData.append('item', params.data.item);
                        formData.append('qty', params.data.qty);
                        formData.append('uenc', params.data.uenc);
                        fetch(params.action, {
                            method: 'POST',
                            body: formData,
                            credentials: 'include'
                        })
                        .then(response => {
                            window.location.reload();
                        })
                        .catch(error => {
                            // Handle fetch errors
                            console.error('Fetch error:', error);
                        });
                    }
                }
            }
        }
    </script>
