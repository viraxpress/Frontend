<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="main">
            <block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Review::html/title.phtml" before="-" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Review\Block\Customer\View" name="customers_review" cacheable="false" ifconfig="catalog/review/active"/>
        </referenceContainer>
    </body>
</page>
